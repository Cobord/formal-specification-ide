{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",

    // FIXME: allowImportingTsExtensions shouldn't be needed. Something is wrong
    // with path-based import configuration
    "allowImportingTsExtensions": true,
    "paths": {
      "@common/*": ["common/*"]
    }
  }
}
